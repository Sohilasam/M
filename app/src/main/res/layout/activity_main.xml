<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قصص تشجيعيه   "
            android:textColor="@color/black"
            android:textSize="30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#92D3F3"
            android:textColor="@color/black"
            android:text="قصه دكتور باسم فى المرحله التعليميه"
            android:textSize="20dp"/>



        <Button
            android:id="@+id/button1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#92D3F3"
            android:textColor="@color/black"
            android:text="قصه دكتور عاطف فى المرحله التعليميه"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#92D3F3"
            android:textColor="@color/black"
            android:text="قصه نجيب محفوظ"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#92D3F3"
            android:textColor="@color/black"
            android:text="قصه مجدى يعقوب"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#92D3F3"
            android:textColor="@color/black"
            android:text="قصه دكتور عاطف فى المرحله التعليميه"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/button5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#92D3F3"
            android:textColor="@color/black"
            android:text="Button"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#92D3F3"
            android:textColor="@color/black"
            android:text="Button"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#92D3F3"
            android:textColor="@color/black"
            android:text="Button"
            android:textSize="20dp"/>






    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>